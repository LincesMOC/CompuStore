<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiuady.android.compustore.AgregarEnsamble">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.fiuady.android.compustore.ProductsActivity">



            <TextView
                android:id="@+id/textviewdescripcion"
                android:layout_width="wrap_content"
                android:text="DescripciÃ³n ensamble: "
                android:textSize="16dp"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/edittextdescripcion"
                android:layout_width="200dp"
                android:hint="Insertar texto.."
                android:textSize="16dp"
                android:layout_toRightOf="@+id/textviewdescripcion"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />



        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewproductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.fiuady.android.compustore.ProductsActivity">

        <Button
        android:id="@+id/btncancelar"
        android:layout_alignParentBottom="true"
        android:onClick="btnCancelar"
        android:text="Cancelar"
        android:layout_alignParentStart="true"
        android:layout_width="130dp"
        android:layout_height="wrap_content" />

        <Button
        android:id="@+id/btnguardar"
        android:layout_alignParentBottom="true"
        android:text="Guardar"
        android:onClick="btnguardar"
        android:layout_alignParentEnd="true"
        android:layout_width="130dp"
        android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
