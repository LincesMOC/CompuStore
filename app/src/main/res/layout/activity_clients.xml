<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.fiuady.android.compustore.ClientsActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filtrado_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Filtrado: "
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/filtrado_tag"></Spinner>

        <TextView
            android:id="@+id/txtFiltrado_tag"
            android:layout_width="wrap_content"
            android:text="Buscar: "
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_below="@id/filtrado_tag"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/edittextdescripcion"
            android:layout_width="200dp"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtFiltrado_tag"
            android:paddingBottom="15dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_clients_RV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contextClickable="false"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="vertical"
        tools:context="com.fiuady.android.compustore.ClientsActivity">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>