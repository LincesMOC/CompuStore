<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageButton
        android:id="@+id/idImageButtonProducto_Faltante"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:background="@android:color/transparent"
        android:onClick="onImageClickFaltante"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/producto_faltante" />

    <ImageButton
        android:id="@+id/idImageButtonConfirmacion_Ordenes"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:background="@android:color/transparent"
        android:onClick="onImageClickConfirmacion"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/simulador" />

    <ImageButton
        android:id="@+id/idImageButtonResumen_Ventas"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:background="@android:color/transparent"
        android:onClick="onImageClickVentas"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/resumen_ventas" />

</LinearLayout>
