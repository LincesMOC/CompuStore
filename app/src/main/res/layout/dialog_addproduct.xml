<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="Agregar producto"
         />

    <TextView
        android:id="@+id/add_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_title"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:text="Categoria: "
        />

    <TextView
        android:id="@+id/add_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_categoria"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:text="DescripciÃ³n: "
        />
    <TextView
        android:id="@+id/add_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_descripcion"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:text="Precio: "
        />


    <Spinner
        android:id="@+id/addtxtcateg"
        android:layout_width="match_parent"
        android:layout_below="@+id/add_title"
        android:layout_toRightOf="@+id/add_descripcion"
        android:layout_height="wrap_content" ></Spinner>

    <EditText
        android:id="@+id/add_txtdesc"
        android:layout_width="match_parent"
        android:layout_below="@+id/addtxtcateg"
        android:hint="Escribe la descripcion"
        android:layout_toRightOf="@+id/add_descripcion"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/add_txtprecio"
        android:layout_width="match_parent"
        android:layout_below="@+id/add_txtdesc"
        android:hint="Escribe el precio"
        android:layout_toRightOf="@+id/add_descripcion"
        android:layout_height="wrap_content" />

</RelativeLayout>